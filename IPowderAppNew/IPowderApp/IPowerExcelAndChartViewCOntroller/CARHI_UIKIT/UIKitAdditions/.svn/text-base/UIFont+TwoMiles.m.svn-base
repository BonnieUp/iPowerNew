#import "UIFont+TwoMiles.h"

@implementation UIFont (TwoMiles)

+(UIFont *)naviBarTitle {
    return [UIFont boldSystemFontOfSize:17];
}

+(UIFont *)arialBoldWithSize:(CGFloat)size {
    return [UIFont fontWithName:@"Arial-BoldMT" size:size];
}

+(UIFont *)arialWithSize:(CGFloat)size {
    return [UIFont fontWithName:@"ArialMT" size:size];
}

@end
